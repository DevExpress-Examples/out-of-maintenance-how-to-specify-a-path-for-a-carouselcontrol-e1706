<Window x:Class="CarouselItemMovingPath.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="300" Width="300" 
        xmlns:dxca="http://schemas.devexpress.com/winfx/2008/xaml/carousel">
    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type Rectangle}" 
BasedOn="{StaticResource {ComponentResourceKey TypeInTargetAssembly={x:Type dxca:CarouselPanel},
ResourceId=advancedCarouselItemStyle}}"/>
        </Grid.Resources>

        <dxca:CarouselPanel Margin="12" Name="carouselPanel1" VisibleItemCount="5" 
ActiveItemIndex="2" 
ItemMovingPath="{StaticResource 
{ComponentResourceKey TypeInTargetAssembly={x:Type dxca:CarouselPanel}, ResourceId=Ellipse}}">
            <Rectangle Fill="Red"/>
            <Rectangle Fill="Green"/>
            <Rectangle Fill="Blue"/>
            <Rectangle Fill="Yellow"/>
            <Rectangle Fill="Beige"/>
        </dxca:CarouselPanel>
    </Grid>
</Window>